# vim:ft=conf
# See also: ~/.ignore

--type-set=proto=.proto,.protodevel

--type-set=ebuild=.ebuild

--type-set=svg=.svg

# Remapping --cc to match C/C++ files
#   --[no]cc           .c .h .xs
#   --[no]cpp          .cpp .cc .cxx .m .hpp .hh .h .hxx
--type-set=cc=.c,.cc,.cpp,.cxx,.h,.hh,.hpp,.hxx

# Jekyll generated site
--ignore-dir=_site


--ignore-dir=jscript/jquery
--ignore-dir=node_modules

--ignore-file=match:/\.min\.css$/
--ignore-file=match:/\.min\.js$/
--ignore-file=match:/\.css\.map$/
--ignore-file=match:/\.js\.map$/
--ignore-file=match:/\.bundle\.js$/
--ignore-file=match:/\.compiled\.js$/
--ignore-file=is:amplitude-sdk.js
--ignore-file=is:bootstrap.css
--ignore-file=is:bootstrap.js
--ignore-file=is:bootstrap-sortable.js
--ignore-file=is:jquery.js
--ignore-file=is:moment.js
--ignore-file=is:package-lock.json
--ignore-file=is:swagger-ui.js
--ignore-file=is:swagger-ui-bundle.js
--ignore-file=match:/^jquery\..*\.css$/
--ignore-file=match:/^jquery\..*\.js$/
--ignore-file=match:/^jquery-.*\.css$/
--ignore-file=match:/^jquery-.*\.js$/
